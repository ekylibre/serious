= grid(collection_grid) do |g|

  - g.column name: Actor.human_attribute_name(:name) do |item|
    - link_to(item.name, backend_actor_path(item))

  - g.column do |item|
    - link_to(:edit.ta, edit_backend_actor_path(item))

  - g.column do |item|
    - link_to(:destroy.ta, backend_actor_path(item), method: :delete, data: {confirm: :are_you_sure.tl})

