#world.container
  .row
    .col-md-5
    .col-md-5
      %h1 Ma page
  .btn.btn-default
    = link_to('Vers ma page', {controller: :actors, action: :show, id: @participant.id})
  .row
    .col-md-5
    .col-md-5
      %h1 Le monde
  %h2 Liste des participants
  -@farms.each do |farm|
    .cube
      .flip
        %h3= farm.name
      .flop
        %h3= farm.name
        -if farm.isPresence?
          %h4 Emplacement:
          -farm.locationEvent
          //todo enlever le lien quand il y a aura pr√©sence
          =link_to('Voir la boutique', {controller: :shops, action: :show, id: farm.id} )
        -else
          =link_to('Voir les contrats', {controller: :actors, action: :show, id: farm.id} )

  = render 'curve'