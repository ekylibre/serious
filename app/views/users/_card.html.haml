.user-card
  = link_to(user_logo(user), user_path(user), class: "user-logo")
  .user-details
    .user-title
      = user.name
      - if current_user.administrator? || (current_user && current_user == @user)
        %small.user-email= user.email
    - if content
      = content
    - else
      .user-labels
        %span.label.label-primary= user.role.text
